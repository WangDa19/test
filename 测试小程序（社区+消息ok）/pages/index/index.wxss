.container {
  padding: 0 20rpx;
  background-color: #ffffff;
  min-height: 100vh;
  padding-bottom: 240rpx; /* 增加底部padding */
  box-sizing: border-box;
  position: relative; /* 添加相对定位 */
}

.waterfall {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  margin-bottom: 200rpx; /* 增加底部间距 */
}

.waterfall-left, .waterfall-right {
  width: 48%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 移除固定的margin-top */
.waterfall-left {
  margin-top: 0;
}

/* 确保卡片内容完整显示 */
.card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  margin-bottom: 30rpx; /* 增加卡片间距 */
}

.card-image {
  width: 100%;
  height: auto;
  display: block;
}

.content {
  padding: 12rpx 16rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 1.4;
}

.user-info {
  padding: 16rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  border-top: 1rpx solid #f5f5f5;
  margin-bottom: 10rpx; /* 增加底部间距 */
}

/* 调整搜索栏，避免遮挡内容 */
.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  padding: 0 30rpx;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  z-index: 99;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 调整功能区域的位置 */
.function-area {
  margin-top: 108rpx; /* 搜索栏高度 + 间距 */
  padding: 20rpx 0;
}

/* 修改底部导航栏样式 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1rpx solid #f0f0f0;
  padding-bottom: env(safe-area-inset-bottom); /* 适配全面屏 */
  z-index: 999; /* 确保在最上层 */
  box-shadow: 0 -2rpx 6rpx rgba(0, 0, 0, 0.05);
}

/* 确保卡片不会被底部导航栏遮挡 */
.card:last-child {
  margin-bottom: 20rpx;
}

/* 确保最后一个卡片有足够的底部间距 */
.waterfall-left .card:last-child,
.waterfall-right .card:last-child {
  margin-bottom: 160rpx; /* 增加最后一个卡片的底部间距 */
} 