<view class="verify-container"><block wx:if="{{verifyStatus==='loading'}}"><view class="loading-box"><image class="loading-image" src="/static/images/loading.gif" mode="aspectFit"></image><text class="loading-text">验证信息获取中...</text></view></block><block wx:else><block wx:if="{{verifyStatus==='success'}}"><view class="result-box success"><uni-icons vue-id="246fee55-1" type="checkbox-filled" size="60" color="#4CD964" bind:__l="__l"></uni-icons><text class="result-title">学籍验证成功</text><view class="info-card"><view class="info-item"><text class="label">学校：</text><text class="value">{{educationInfo.schoolName}}</text></view><view class="info-item"><text class="label">专业：</text><text class="value">{{educationInfo.major}}</text></view><view class="info-item"><text class="label">学历：</text><text class="value">{{educationInfo.degree}}</text></view><view class="info-item"><text class="label">学号：</text><text class="value">{{educationInfo.studentId}}</text></view></view><button data-event-opts="{{[['tap',[['saveAndBack',['$event']]]]]}}" class="btn" bindtap="__e">确认信息并返回</button></view></block><block wx:else><block wx:if="{{verifyStatus==='error'}}"><view class="result-box error"><uni-icons vue-id="246fee55-2" type="close-filled" size="60" color="#DD524D" bind:__l="__l"></uni-icons><text class="result-title">验证失败</text><text class="error-msg">{{errorMsg}}</text><button data-event-opts="{{[['tap',[['retryVerify',['$event']]]]]}}" class="btn" bindtap="__e">重新验证</button><button data-event-opts="{{[['tap',[['backToProfile',['$event']]]]]}}" class="btn btn-plain" bindtap="__e">返回个人中心</button></view></block></block></block></view>