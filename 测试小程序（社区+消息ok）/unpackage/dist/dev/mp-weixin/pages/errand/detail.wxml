<view class="container"><view class="map-area"><map class="map" id="map" latitude="{{task.endLocation.latitude}}" longitude="{{task.endLocation.longitude}}" markers="{{markers}}" scale="{{16}}" show-location="{{true}}"><cover-view class="controls"><cover-view data-event-opts="{{[['tap',[['moveToLocation',['$event']]]]]}}" class="location-btn" bindtap="__e"><cover-image src="/static/images/location.png"></cover-image></cover-view></cover-view></map></view><view class="task-detail"><view class="detail-card"><text class="detail-title">{{task.title}}</text><text class="detail-desc">{{task.details}}</text><view class="location-info"><view class="location-item"><text class="label">终点位置：</text><text class="value">{{task.endAddress}}</text></view></view><view class="price-info"><text class="price">{{"¥"+task.reward}}</text><button data-event-opts="{{[['tap',[['acceptTask',['$event']]]]]}}" class="accept-btn" bindtap="__e">接单</button></view></view></view></view>