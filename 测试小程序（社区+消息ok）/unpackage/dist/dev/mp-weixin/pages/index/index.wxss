page {
  background-color: #ffffff;
}
.index-container {
  padding: 0 20rpx;
  background-color: #ffffff;
  min-height: 100vh;
  padding-bottom: calc(240rpx + env(safe-area-inset-bottom)) !important;
  box-sizing: border-box;
  position: relative;
}
.custom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
}
.index-container .search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  padding: 0 20rpx;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  z-index: 99;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.index-container .search-bar input {
  flex: 1;
  height: 40rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  padding: 0 15rpx 0 40rpx;
  font-size: 22rpx;
}
.index-container .search-icon {
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}
.index-container .function-area {
  margin-top: 80rpx;
  padding: 10rpx 20rpx;
}
.index-container .function-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}
.index-container .menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  transition: background 0.3s;
}
.index-container .menu-item:hover {
  background: #e0e0e0;
}
.index-container .menu-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 5rpx;
}
.index-container .menu-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}
.index-container .content-area {
  margin-top: 30rpx;
  padding: 0 10rpx;
}
.index-container .section {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.index-container .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.index-container .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.index-container .more-text {
  font-size: 26rpx;
  color: #999;
}
.index-container .scroll-content {
  white-space: nowrap;
  margin: 0 -20rpx;
  padding: 0 20rpx;
}
.index-container .hot-items {
  display: flex;
  padding: 10rpx 0;
}
.index-container .hot-item {
  width: 240rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.index-container .hot-image {
  width: 240rpx;
  height: 180rpx;
  border-radius: 12rpx 12rpx 0 0;
}
.index-container .hot-info {
  padding: 12rpx;
}
.index-container .hot-title {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.index-container .hot-price {
  font-size: 24rpx;
  color: #ff5757;
  margin-top: 8rpx;
  display: block;
}
.index-container .new-list {
  margin: 0 -20rpx;
}
.index-container .new-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.index-container .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.index-container .new-content {
  flex: 1;
}
.index-container .new-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}
.index-container .new-nickname {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.index-container .new-time {
  font-size: 24rpx;
  color: #999;
}
.index-container .new-title {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}
.index-container .activity-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.index-container .activity-item {
  border-radius: 12rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.index-container .activity-image {
  width: 100%;
  height: 160rpx;
  border-radius: 12rpx 12rpx 0 0;
}
.index-container .activity-info {
  padding: 12rpx;
}
.index-container .activity-title {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
}
.index-container .activity-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
}

